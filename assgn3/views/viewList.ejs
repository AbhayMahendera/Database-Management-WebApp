<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?auto=format&fit=crop&q=80&w=1000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxleHBsb3JlLWZlZWR8MXx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
    <title>User List</title>
</head>

<body class="bg-space-background text-white flex flex-col min-h-screen">
    <div class="container mx-auto py-8 flex justify-center">
        <h1 class="text-3xl font-semibold">User List</h1>
        <a href="/" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-auto">
            Login to view Details
        </a>
    </div>
</body>



<!-- Paginated content -->
<div class="container mx-auto py-8">
    <!-- Display a list of users -->
    <ul class="viewList">
        <% users.forEach(function(user) { %>
            <li class="mb-4 p-4 border border-gray-700 rounded-lg shadow-md bg-gray-800 bg-opacity-70">
                <span class="text-blue-400"><%= user.id %> : <%= user.firstName %> <%= user.lastName %></span>
            </li>
        <% }); %>
    </ul>
    <div class="mt-4 flex justify-center">
        <% if (currentPage > 1) { %>
            <a href="/viewList?page=<%= currentPage - 1 %>" class="text-blue-400 hover:underline mr-4">Previous</a>
        <% } %>
        <% if (users.length === 25) { %>
            <a href="/viewList?page=<%= currentPage + 1 %>" class="text-blue-400 hover:underline">Next</a>
        <% } %>
    </div>
</div>
