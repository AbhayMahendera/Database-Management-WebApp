        body {
            background: url('media/admin2.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .glass-bg {
            background: rgba(255, 255, 255, 0.053);
            backdrop-filter: blur(40px);
            
        }
        .marquee-text {
            white-space: nowrap;
            overflow: hidden;
            box-sizing: border-box;
            animation: flashAnimation 2s infinite alternate;
        }

        @keyframes flashAnimation {
            0% {
                color: red;
            }

            25% {
                color: rgb(255, 0, 221);
            }
            50% {
                color: rgb(36, 255, 69);
            }

            75% {
                color: rgb(238, 255, 7);
            }
            100% {
                color: rgb(255, 255, 255);
            }}
     
       
    </style>
</head>
