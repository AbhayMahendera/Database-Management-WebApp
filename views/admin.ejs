                <!-- Create -->
<section class="mb-8">
    <h3 class="text-xl font-semibold mb-4">Add a new user:</h3>
    <form action="/admin/createUser" method="post">

        <label for="id" class="block text-sm font-medium text-gray-700">Assign an ID :</label>
        <input type="text" id="id" name="id" class="mt-1 p-2 border rounded-md" required>

        <label for="firstname" class="block text-sm font-medium text-gray-700">First Name:</label>
        <input type="text" id="firstname" name="firstname" class="mt-1 p-2 border rounded-md" required>

        <label for="lastname" class="block text-sm font-medium text-gray-700">Last Name:</label>
        <input type="text" id="lastname" name="lastname" class="mt-1 p-2 border rounded-md" required>

        <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
        <input type="email" id="email" name="email" class="mt-1 p-2 border rounded-md" required>

        <label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
        <input type="password" id="password" name="password" class="mt-1 p-2 border rounded-md" required>

        <label for="dob" class="block text-sm font-medium text-gray-700">Date of Birth:</label>
        <input type="date" id="dob" name="dob" class="mt-1 p-2 border rounded-md" required>

        <label for="phone" class="block text-sm font-medium text-gray-700">Phone:</label>
        <input type="text" id="phone" name="phone" class="mt-1 p-2 border rounded-md" required>

        <label for="company" class="block text-sm font-medium text-gray-700">Company:</label>
        <input type="text" id="company" name="company" class="mt-1 p-2 border rounded-md" required>

        <button type="submit" class="mt-4 bg-blue-500 text-white p-2 rounded-md">Create User</button>
    </form>
</section>

                                             <!-- Read -->
                <h2 class="text-2xl font-bold mb-6">Search for user : </h2>
                <form action="/searchUser" method="post"> 
                    <label for="id" class="block text-sm font-medium text-gray-700">User ID:</label>
                    <input type="text" id="id" name="id" class="mt-1 p-2 border rounded-md" required>
                    <button type="submit" class="mt-4 bg-blue-500 text-white p-2 rounded-md">Search</button>
                </form>
<!-- Update User Form -->
<section class="mb-8">
    <h3 class="text-xl font-semibold mb-4">Update a user:</h3>
    <form action="/admin/updateUser" method="post">

        <label for="updateUserId" class="block text-sm font-medium text-gray-700">User ID:</label>
        <input type="text" id="updateUserId" name="id" class="mt-1 p-2 border rounded-md" required>

        <label for="updateFirstname" class="block text-sm font-medium text-gray-700">First Name:</label>
        <input type="text" id="updateFirstname" name="firstname" class="mt-1 p-2 border rounded-md" required>

        <label for="updateLastname" class="block text-sm font-medium text-gray-700">Last Name:</label>
        <input type="text" id="updateLastname" name="lastname" class="mt-1 p-2 border rounded-md" required>

        <label for="updateEmail" class="block text-sm font-medium text-gray-700">Email:</label>
        <input type="email" id="updateEmail" name="email" class="mt-1 p-2 border rounded-md" required>

        <label for="updatePassword" class="block text-sm font-medium text-gray-700">Password:</label>
        <input type="password" id="updatePassword" name="password" class="mt-1 p-2 border rounded-md" required>

        <label for="updateDob" class="block text-sm font-medium text-gray-700">Date of Birth:</label>
        <input type="date" id="updateDob" name="dob" class="mt-1 p-2 border rounded-md" required>

        <label for="updatePhone" class="block text-sm font-medium text-gray-700">Phone:</label>
        <input type="text" id="updatePhone" name="phone" class="mt-1 p-2 border rounded-md" required>

        <label for="updateCompany" class="block text-sm font-medium text-gray-700">Company:</label>
        <input type="text" id="updateCompany" name="company" class="mt-1 p-2 border rounded-md" required>

        <button type="submit" class="mt-4 bg-blue-500 text-white p-2 rounded-md">Update User</button>
    </form>
</section>

<!-- Delete User Form -->
<section class="mb-8">
    <h3 class="text-xl font-semibold mb-4">Delete a user:</h3>
    <form action="/admin/deleteUser" method="post">
        <label for="deleteUserId" class="block text-sm font-medium text-gray-700">User ID:</label>
        <input type="text" id="deleteUserId" name="id" class="mt-1 p-2 border rounded-md" required>

        <button type="submit" class="mt-4 bg-red-500 text-white p-2 rounded-md">Delete User</button>
    </form>
</section>
              


